<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="{{ asset('build/images/logo-wild-serie.png') }}">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="bg-dark">
		{% block header %}
			{% include "components/_navbar.html.twig" %}
		{% endblock %}

		{% block body %}
			{% for category, messages in app.flashes %}

				{% for message in messages %}

					<div class="alert alert-{{ category }}">

						{{ message }}

					</div>

				{% endfor %}

			{% endfor %}
		{% endblock %}
	</body>
</html>
